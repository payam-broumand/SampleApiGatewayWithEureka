@page "{id?}"
@model SampleApiWithEureka.ClientRazorPage.Pages.Categories.EditModel
@{
}
<section class="card">
	<div class="card-body">
		<h4 class="card-title alert alert-info">ویرایش دسته بندی</h4>
		<form method="post">
			<input type="hidden" asp-for="Category.Id" />
			<div class="mt-2">
				<label for="title" asp-for="Category.Title"></label>
				<input class="form-control" type="text" asp-for="Category.Title" id="title" />
				<span asp-validation-for="Category.Title" class="text-danger"></span>
			</div>
			<div class="mt-3 text-start">
				<button class="btn btn-success">ذخیره تغییرات</button>
			</div>
		</form>
	</div>
</section>
@page
@model SampleApiWithEureka.ClientRazorPage.Pages.Categories.IndexModel
@{
}
<h3 class="alert alert-info">مدیریت دسته بندی</h3>
<partial name="PrintErrors" model="@MessageModel.Messages">
<table class="table table-warning">
	<thead>
		<tr>
			<td>شناسه</td>
			<td>عنوان</td>
			<td>دوره های آموزشی</td>
			<td>ویرایش</td>
			<td>حذف</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Categories)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Title</td>
				<td>
					<a asp-page="CourseList" asp-route-id="@item.Id" class="btn btn-info btn-sm">
						دوره ها
					</a>
				</td>
				<td>
					<a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
						ویرایش
					</a>
				</td>
				<td>
					<a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
						حذف
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
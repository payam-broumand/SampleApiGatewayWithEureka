@page
@model SampleApiWithEureka.ClientRazorPage.Pages.Courses.IndexModel
@{
}
<h4 class="alert alert-info">لیست دوره های آموزشی</h4>
<partial name="PrintErrors" model="@MessageModel.Messages" />
<table class="table table-warning">
	<thead>
		<tr>
			<td>شناسه</td>
			<td>عنوان</td>
			<td>قیمت</td>
			<td>ویرایش</td>
			<td>حذف</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Courses)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Title</td>
				<td>@($"{item.Price:n0} تومان")</td>
				<td>
					<a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
						ویرایش
					</a>
				</td>
				<td>
					<a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
						حذف
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>